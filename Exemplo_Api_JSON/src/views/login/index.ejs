<!doctype html>
<html lang="pt">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>API com MVC NODE</title>
    <link href="https://getbootstrap.com/docs/4.0/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <br/><br/><br/>
      <h2>Exemplo API Node.JS com MVC</h2>
      <br/>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
      <% if (login.length > 0) { %>
          <% for(var i = 0; i < login.length; i++) {%> 
            </tr>
              <th scope="row"><%= login[i].id %></th>
              <td><h4 ><%= login[i].nome %></h4></td>
              <td><%= login[i].email %></td>
            </tr>
          <% } %>
        
      <% } %>
    </div>
  </body>
</html>